<%- include('partials/header') %>

<style>
    form {
        position: absolute;
        top: 25%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<form action="/user" method="post" class="p-4 border rounded">
    <h2 class="mb-4">Login</h2>
    <div class="form-group mb-4">
        <label for="username" class="sr-only">Username:</label>
        <input type="text" name="username" id="username" class="form-control form-control-lg rounded-0" placeholder="Username">
    </div>
    <div class="form-group mb-4">
        <label for="password" class="sr-only">Password:</label>
        <input type="password" name="password" id="password" class="form-control form-control-lg rounded-0" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary btn-lg d-block mx-auto rounded-0">Login</button>
</form>


<%- include('partials/footer') %>